# 数据库配置 - 使用本地MySQL
DB_HOST=mysql
DB_PORT=3306
DB_NAME=typing
DB_USER=
DB_PASSWORD=
DATABASE_URL=mysql://user:password@mysql:3306/typing


# 数据库配置 
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=typing

# Redis 配置 - 使用本地Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here_please_change_in_production
JWT_EXPIRES_IN=7d

# 应用配置
NODE_ENV=development
BACKEND_PORT=3001
FRONTEND_PORT=3000

# 前端配置
NEXT_PUBLIC_BASE_URL=/api
FRONTEND_URL=http://localhost

# 功能开关
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_REGISTRATION=true
ENABLE_GUEST_MODE=true

# 第三方服务配置（Github 登录）
GITHUB_CLIENT_ID=your-github-app-id
GITHUB_CLIENT_SECRET=your-github-app-secret
GITHUB_CALLBACK_URL=/api/auth/github/callback

QQ_CLIENT_ID=your-qq-app-id
QQ_CLIENT_SECRET=your-qq-app-secret
QQ_CALLBACK_URL=/api/auth/qq/callback

# 语音服务配置（可选）
YOUDAO_APP_KEY=your-youdao-app-key
YOUDAO_APP_SECRET=your-youdao-app-secret

