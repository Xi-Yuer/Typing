# 应用环境配置
NODE_ENV=production
PORT=80

# 数据库配置
DATABASE_URL=mysql://typing_user:typing_password@mysql:3306/typing_db
DB_HOST=mysql
DB_PORT=3306

# Redis 配置
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here_please_change_in_production
JWT_EXPIRES_IN=7d

# 前端配置
NEXT_PUBLIC_BASE_URL=/api
FRONTEND_URL=http://localhost:3000

# 功能开关
ENABLE_SWAGGER=true
ENABLE_CORS=true

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:80/api/auth/github/callback
NEXT_PUBLIC_GITHUB_SSO_URL=http://localhost:80/api/auth/github

# QQ OAuth 配置
QQ_CLIENT_ID=your_qq_client_id
QQ_CLIENT_SECRET=your_qq_client_secret
QQ_CALLBACK_URL=http://localhost:80/api/auth/qq/callback

# 语音服务配置（有道智云）
VOICE_API_URL=https://openapi.youdao.com/ttsapi
YOUDAO_APP_KEY=your_youdao_app_key
YOUDAO_APP_SECRET=your_youdao_app_secret

# 数据库配置（用于本地开发）
# 如果使用本地数据库，请修改以下配置
# DATABASE_URL=mysql://root:password@localhost:3306/typing_db
# REDIS_URL=redis://localhost:6379

# 生产环境安全配置
# 请在生产环境中修改以下默认值：
# 1. JWT_SECRET - 使用强随机字符串
# 2. 数据库密码 - 使用强密码
# 3. GitHub/QQ OAuth 配置 - 使用真实的应用配置